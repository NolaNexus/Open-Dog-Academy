+#!/usr/bin/env python3
+"""Validate YAML front matter for atoms and skills.
+
+Goal: catch drift early and keep generation reliable.
+
+Rules:
+- Atoms require: id, title, type
+- Skills require: id, title, level
+
+Exit non-zero on any error.
+"""
+
+from __future__ import annotations
+
+from pathlib import Path
+import re
+import sys
+
+import yaml
+
+RE_FM = re.compile(r"^---\s*\n(.*?)\n---\s*\n(.*)\Z", re.S)
+
+ROOT = Path(__file__).resolve().parents[1]
+DOCS = ROOT / "docs"
+ATOMS_DIR = DOCS / "_atoms"
+SKILLS_DIR = DOCS / "skills"
+
+
+def parse_front_matter(path: Path) -> dict:
+    text = path.read_text(encoding="utf-8")
+    m = RE_FM.match(text)
+    if not m:
+        return {}
+    return yaml.safe_load(m.group(1)) or {}
+
+
+def err(msg: str) -> None:
+    print(msg, file=sys.stderr)
+
+
+def validate_atoms() -> int:
+    rc = 0
+    if not ATOMS_DIR.exists():
+        return 0
+    for p in sorted(ATOMS_DIR.rglob("*.md")):
+        if p.name == "README.md":
+            continue
+        fm = parse_front_matter(p)
+        missing = [k for k in ("id", "title", "type") if not fm.get(k)]
+        if missing:
+            rc = 1
+            err(f"Atom missing {missing}: {p}")
+    return rc
+
+
+def validate_skills() -> int:
+    rc = 0
+    if not SKILLS_DIR.exists():
+        return 0
+    for p in sorted(SKILLS_DIR.rglob("*.md")):
+        if p.name == "index.md":
+            continue
+        fm = parse_front_matter(p)
+        missing = [k for k in ("id", "title", "level") if fm.get(k) in (None, "")]
+        if missing:
+            rc = 1
+            err(f"Skill missing {missing}: {p}")
+    return rc
+
+
+def main() -> int:
+    rc = 0
+    rc |= validate_atoms()
+    rc |= validate_skills()
+    return rc
+
+
+if __name__ == "__main__":
+    raise SystemExit(main())
